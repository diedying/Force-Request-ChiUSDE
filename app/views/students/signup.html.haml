%h1 Signup Page
.signuppage
  =  form_tag('/students/create', method: :post) do
    %table{:border => "0"}
      %tr
        %td
          = label :session, :firstname, 'Enter FirstName'
        %td
          = text_field(:session, :firstname, class: 'input-field', :pattern => "([A-Za-z]+)", :oninvalid => "this.setCustomValidity('Please enter Your FirstName')", :oninput => "this.setCustomValidity('')", :required => true)
      %tr
        %td
          = label :session, :lastname, 'Enter LastName'
        %td
          = text_field(:session, :lastname, class: 'input-field', :pattern => "([A-Za-z]+)", :oninvalid => "this.setCustomValidity('Please enter Your LastName')", :oninput => "this.setCustomValidity('')", :required => true)
             
      
      %tr
        %td
          = label :session, :uin, 'Enter your UIN'
        %td
          // = text_field(:session, :uin, class: 'input-field')
          = text_field(:session, :uin, class: 'input-field', :pattern => "[0-9]{9}", :oninvalid => "this.setCustomValidity('Please enter 9 numbers of UIN')", :oninput => "this.setCustomValidity('')", :required => true)
      %trf
        %td
          = label :session, :uin2, 'ReEnter your UIN'
        %td
          // = text_field(:session, :uin2, class: 'input-field')
          = text_field(:session, :uin2, class: 'input-field', :pattern => "[0-9]{9}", :oninvalid => "this.setCustomValidity('Please enter 9 numbers of UIN')", :oninput => "this.setCustomValidity('')", :required => true)
      %tr
        %td
          = label :session, :email, 'Enter your email (Please enter your tamu email)'
        %td
          // = text_field(:session, :email, class: 'input-field')
          = text_field(:session, :email, class: 'input-field', placeholder: 'xxx@tamu.edu', :pattern => "[a-z0-9._-]{1,}@tamu\.edu", :oninvalid => "this.setCustomValidity('Please enter TAMU Email Address')", :oninput => "this.setCustomValidity('')", :required => true)
          // = text_field(:session, :email, class: 'input-field', :oninvalid => "this.setCustomValidity('Not TAMU Email Address')", :oninput => "this.setCustomValidity('')")
       
      
      
      %tr
        %td
          = label :session, :major, 'Select your Major'
        %td
          = select :session, 'major', @majorList, :required => true
      %tr
        %td
          = label :session, :minor, 'Select your Minor'
        %td
          = select :session, 'minor', @majorList, :required => true      
      
      %tr
        %td
          = label :session, :classification, 'Select your classification'
        %td
          = select :session, 'classification', @classificationList, :required => true


          
      %tr
        %td
          = label :session, :password, 'Enter your password'
        %td
          = password_field(:session, :password, class: 'input-field', :pattern => "[a-zA-Z0-9_]{6,20}", :oninvalid => "this.setCustomValidity('At least 6 and at most 20 of any letter, number, underscore')", :oninput => "this.setCustomValidity('')", :required => true)
      %tr
        %td
          = label :session, :password2, 'ReEnter your password'
        %td
          = password_field(:session, :password2, class: 'input-field', :required => true)
      %tr
        %td
          = label :session, :note, 'Notes'
        %td
          = label :session, :note, "Provided email should match with the search result from </br>#{link_to 'TAMU Directory search', 'https://services.tamu.edu/directory-search/#adv-search'}".html_safe
      
    
    
    = submit_tag 'Signup', :id => 'signup_button_left'
  = form_tag(root_path, method: :get) do
    = submit_tag  "Cancel", :id => 'signup_button_right'