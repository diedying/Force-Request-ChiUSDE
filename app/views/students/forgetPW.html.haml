%h1 this is the page for forget password
.forgetPWpage
  =  form_tag('/students/updatePW', method: :post) do
    %table{:border => "0"}
      %tr
        %td
          = label :session, :uin, 'Enter your UIN'
        %td
          // = text_field(:session, :uin, class: 'input-field')
          = text_field(:session, :uin, class: 'input-field', :pattern => "[0-9]{9}", :oninvalid => "this.setCustomValidity('Invalid UIN')", :oninput => "this.setCustomValidity('')")
      %tr
        %td
          = label :session, :uin2, 'ReEnter your UIN'
        %td
          // = text_field(:session, :uin2, class: 'input-field')
          = text_field(:session, :uin2, class: 'input-field', :pattern => "[0-9]{9}", :oninvalid => "this.setCustomValidity('Invalid UIN')", :oninput => "this.setCustomValidity('')")
      %tr
        %td
          = label :session, :password, 'Enter your password'
        %td
          = password_field(:session, :password, class: 'input-field')
      %tr
        %td
          = label :session, :password2, 'ReEnter your password'
        %td
          = password_field(:session, :password2, class: 'input-field')
    %br
    %br
    = submit_tag 'Reset'